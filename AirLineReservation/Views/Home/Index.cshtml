@{
    ViewData["Title"] = "Airline Reservation - Home";
}

<div class="hero-section d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">

            <!-- 🛫 LEFT SIDE: Hero Text -->
            <div class="col-md-6 hero-text">
                <h1 class="fw-bold display-5 fade-up">
                    Find cheap flights across India & beyond
                </h1>

                <p class="lead fade-up delay-1s">
                    Search and book flights in seconds. Secure checkout and instant confirmation.
                </p>
            </div>

            <!-- ✈️ RIGHT SIDE: Flight Search Form -->
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-4 p-4">
                    <h2 class="text-center mb-4 text-primary fw-bold">Search Flights</h2>

                    <form asp-action="SearchResults" asp-controller="Flight" method="get">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="from" class="form-label">From</label>
                                <select id="from" name="from" class="form-select" required>
                                    <option value="">Select Departure</option>
                                    <option>Mumbai</option>
                                    <option>Delhi</option>
                                    <option>Chennai</option>
                                    <option>Kolkata</option>
                                    <option>Bengaluru</option>
                                    <option>Hyderabad</option>
                                    <option>Pune</option>
                                    <option>Ahmedabad</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label for="to" class="form-label">To</label>
                                <select id="to" name="to" class="form-select" required>
                                    <option value="">Select Destination</option>
                                    <option>Mumbai</option>
                                    <option>Delhi</option>
                                    <option>Chennai</option>
                                    <option>Kolkata</option>
                                    <option>Bengaluru</option>
                                    <option>Hyderabad</option>
                                    <option>Pune</option>
                                    <option>Ahmedabad</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="date" class="form-label">Travel Date</label>
                                <input type="date" id="date" name="date" class="form-control" required />
                            </div>

                            <div class="col-md-6">
                                <label for="passengers" class="form-label">Passengers</label>
                                <input type="number" id="passengers" name="passengers" class="form-control" min="1" value="1" required />
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5">
                                Search Flights
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #0078d4 0%, #4facfe 100%);
        margin: 0;
        overflow-x: hidden;
    }

    .hero-section {
        min-height: 100vh;
        padding: 60px 0;
        display: flex;
        align-items: center;
    }

    /* ✅ Next lines are the requested change */
    .hero-text h1 {
        color: #0B2447; /* Deep navy */
        font-weight: 800;
    }

    .hero-text p {
        color: #1B3358; /* Softer navy tone */
        font-size: 1.18rem;
        font-weight: 500;
    }

    .card {
        background-color: #fff;
        border-radius: 20px;
    }

    .btn-primary {
        background-color: #0078d4;
        border-color: #0078d4;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #005fa3;
            border-color: #005fa3;
        }

    @@keyframes fadeUp {
        0% {
            opacity: 0;
            transform: translateY(40px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-up {
        opacity: 0;
        animation: fadeUp 1s ease-out forwards;
    }

    .delay-1s {
        animation-delay: 0.6s;
    }
</style>
