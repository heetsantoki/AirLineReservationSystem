@{
    ViewData["Title"] = "Flights";
}

<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold">Search Flights</h2>

    <div class="col-md-6 mx-auto">
        <div class="card shadow-lg p-4">
            <form asp-controller="Flight" asp-action="SearchResults" method="get">

                <div class="mb-3">
                    <label class="form-label">From</label>
                    <select name="from" class="form-select" required>
                        <option value="">Select Departure</option>
                        <option>Mumbai</option>
                        <option>Delhi</option>
                        <option>Chennai</option>
                        <option>Kolkata</option>
                        <option>Bengaluru</option>
                        <option>Hyderabad</option>
                        <option>Pune</option>
                        <option>Ahmedabad</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">To</label>
                    <select name="to" class="form-select" required>
                        <option value="">Select Destination</option>
                        <option>Mumbai</option>
                        <option>Delhi</option>
                        <option>Chennai</option>
                        <option>Kolkata</option>
                        <option>Bengaluru</option>
                        <option>Hyderabad</option>
                        <option>Pune</option>
                        <option>Ahmedabad</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Travel Date</label>
                    <input type="date" name="date" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Passengers</label>
                    <input type="number" name="passengers" class="form-control" min="1" value="1" required />
                </div>

                <div class="text-center">
                    <button class="btn btn-primary px-5 rounded-pill" type="submit">
                        Search Flights
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
