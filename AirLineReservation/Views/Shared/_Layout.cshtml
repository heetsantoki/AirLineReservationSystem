@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirLineReservation</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        .navbar-brand {
            font-weight: bold;
            font-size: 1.25rem;
        }

        .nav-link {
            font-weight: 500;
        }

        body {
            background-color: #f8f9fa;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
            <div class="container">

                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <div class="rounded-circle bg-primary text-white fw-bold d-flex justify-content-center align-items-center"
                         style="width: 35px; height: 35px;">
                        AR
                    </div>
                    <span class="ms-2">AirLineReservation</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Search</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Flight" asp-action="Index">Flights</a>
                        </li>

                        @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
                        {
                            <!-- ✅ Show only when logged in -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Booking" asp-action="MyBookings">My Bookings</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <!-- ✅ Show only when NOT logged in -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-primary rounded-pill px-3 ms-2" asp-controller="Account" asp-action="Register">
                                    Sign up
                                </a>
                            </li>
                        }

                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center py-3 mt-5 text-muted">
        © @DateTime.Now.Year AirLineReservation • Built with care ✈️
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
