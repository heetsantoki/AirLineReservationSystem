@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkyBooking</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        /* --- Only the tiny position tweaks you asked for --- */
        .navbar-brand.brand-left {
            margin-left: -8px; /* move logo slightly to the left */
        }

        .navbar-collapse.nav-shift {
            margin-left: 20px; /* move page names slightly to the right */
        }

        .navbar-nav > .nav-item + .nav-item {
            margin-left: .75rem; /* gentle gap between items */
        }

        /* keep your page look */
        .navbar-light {
            background-color: #ffffff !important;
            border-bottom: 1px solid rgba(0,0,0,.05);
        }

        body {
            background-color: #f8f9fa;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light py-3">
            <div class="container">
                <!-- Brand (logo) -->
                <a class="navbar-brand d-flex align-items-center brand-left" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-airplane-fill me-2"></i>
                    <span class="fw-bold">SkyBooking</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav links (moved slightly right) -->
                <div class="collapse navbar-collapse nav-shift" id="mainNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Flight" asp-action="Index">Flights</a>
                        </li>

                        @if (HttpContextAccessor.HttpContext?.User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Booking" asp-action="MyBookings">My Bookings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary rounded-pill px-3" asp-controller="Account" asp-action="Register">
                                    Sign up
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center py-3 mt-5 text-muted">
        © @DateTime.Now.Year SkyBooking • Built with care ✈️
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
