@model dynamic
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .success-container {
        max-width: 800px;
        margin: auto;
        background: #fff;
        border-radius: 14px;
        padding: 35px;
        margin-top: 40px;
        box-shadow: 0px 8px 28px rgba(0,0,0,0.15);
        animation: pop 0.4s ease;
    }

    @@keyframes pop {
        from

    {
        transform: scale(0.95);
        opacity: 0;
    }

    to {
        transform: scale(1);
        opacity: 1;
    }

    }

    .check-icon {
        font-size: 60px;
        color: #2ecc71;
    }
</style>

<div class="success-container text-center">
    <i class="bi bi-check-circle-fill check-icon"></i>
    <h2 class="mt-3 text-success">Booking Confirmed!</h2>
    <p class="text-muted">Your flight has been successfully booked.</p>
    <hr />

    <h5 class="text-start mt-4">Flight Details</h5>
    <p><strong>Flight:</strong> @Model.FlightNumber (@Model.Airline)</p>
    <p><strong>Route:</strong> @Model.From → @Model.To</p>
    <p><strong>Departure:</strong> @Model.DepartureTime</p>
    <p><strong>Arrival:</strong> @Model.ArrivalTime</p>

    <h5 class="text-start mt-4">Passenger Details</h5>
    <p><strong>Name:</strong> @Model.PassengerName</p>
    <p><strong>Age:</strong> @Model.PassengerAge</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>Total Passengers:</strong> @Model.Passengers</p>

    <h5 class="text-start mt-4">Payment</h5>
    <p><strong>Total Price:</strong> <span class="fw-bold text-success">₹@Model.Price</span></p>

    <div class="mt-4">
        <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-primary px-4 me-2">View My Bookings</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark px-4">Back to Home</a>
    </div>
</div>
