@model dynamic
@{
    ViewData["Title"] = "Booking Successful";
}

<h2 class="text-success">Booking Confirmed ✅</h2>

<div class="card p-4 shadow-sm mt-3">

    <h4>Flight Details</h4>
    <p><strong>Flight:</strong> @Model.FlightNumber (@Model.Airline)</p>
    <p><strong>Route:</strong> @Model.From → @Model.To</p>
    <p><strong>Departure:</strong> @Model.DepartureTime</p>
    <p><strong>Arrival:</strong> @Model.ArrivalTime</p>

    <hr />

    <h4>Passenger Details</h4>
    <p><strong>Name:</strong> @Model.PassengerName</p>
    <p><strong>Age:</strong> @Model.PassengerAge</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>Total Passengers:</strong> @Model.Passengers</p>

    <hr />

    <h4>Payment</h4>
    <p><strong>Total Price:</strong> ₹@Model.Price</p>
</div>

<br />
<a href="/Booking/MyBookings" class="btn btn-primary">View My Bookings</a>
<a href="/" class="btn btn-secondary">Back to Home</a>
