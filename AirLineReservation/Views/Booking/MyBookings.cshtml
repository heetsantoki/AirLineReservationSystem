@model IEnumerable<AirLineReservation.ViewModel.MyBookingsViewModel>

<h2 class="mb-4 text-center">My Bookings</h2>

<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>Passenger</th>
            <th>Airline</th>
            <th>Flight</th>
            <th>Route</th>
            <th>Departure</th>
            <th>Arrival</th>
            <th>Price (₹)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PassengerName</td>
                <td>@item.Airline</td>
                <td>@item.FlightNumber</td>
                <td>@item.From → @item.To</td>
                <td>@item.DepartureTime.ToString("dd MMM, hh:mm tt")</td>
                <td>@item.ArrivalTime.ToString("dd MMM, hh:mm tt")</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>
