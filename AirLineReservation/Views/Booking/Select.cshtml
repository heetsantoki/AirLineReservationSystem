@model AirLineReservation.ViewModel.BookingViewModel

<h3 class="mt-4">Enter Passenger Details</h3>

<form method="post">
    <input type="hidden" asp-for="FlightId" />

    <div class="form-group">
        <label>Passenger Name</label>
        <input asp-for="PassengerName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Age</label>
        <input asp-for="PassengerAge" class="form-control" required type="number" />
    </div>

    <div class="form-group">
        <label>Gender</label>
        <select asp-for="Gender" class="form-control">
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>
    </div>

    <div class="form-group">
        <label>Passengers</label>
        <input asp-for="Passengers" class="form-control" type="number" min="1" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Continue</button>
</form>
